                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <Grid Name="Cursorhehe" VerticalAlignment="Bottom">
                                <StackPanel Orientation="Horizontal">
                                    <Label Name="MouseCoor" Foreground="Black" Content="X:Y" FontSize="11"></Label>
