                                                                <GeometryDrawing.Pen>
                                                                    <Pen Thickness="1" Brush="#A9A9A9" />
                                                                </GeometryDrawing.Pen>
                                                            </GeometryDrawing>
                                                            <GeometryDrawing Geometry="M0,0 L0,50">
                                                                <GeometryDrawing.Pen>
                                                                    <Pen Thickness="1.5" Brush="#A9A9A9" />
                                                                </GeometryDrawing.Pen>
                                                            </GeometryDrawing>
                                                            <GeometryDrawing Geometry="M10,0 L10,50">
                                                                <GeometryDrawing.Pen>
                                                                    <Pen Thickness="1" Brush="#A9A9A9" />
                                                                </GeometryDrawing.Pen>
                                                            </GeometryDrawing>
                                                            <GeometryDrawing Geometry="M20,0 L20,50">
                                                                <GeometryDrawing.Pen>
                                                                    <Pen Thickness="1" Brush="#A9A9A9" />
                                                                </GeometryDrawing.Pen>
                                                            </GeometryDrawing>
                                                            <GeometryDrawing Geometry="M30,0 L30,50">
                                                                <GeometryDrawing.Pen>
                                                                    <Pen Thickness="1" Brush="#A9A9A9" />
